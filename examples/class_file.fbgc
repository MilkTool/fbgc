File = class()
	fname = ""
	is_open = false
	file_opening_format = "w+"
	fl = 0

	init = fun(fname,self)
		self.fname = fname
		self.fl = fopen(fname,self.file_opening_format)
		return self
	end

	put = fun(self,text)
		self.fl.fprint(text)
	end

	close = fun(self)
		self.fl.fclose()
	end

end

